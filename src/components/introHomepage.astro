---
import "../styles/components/introHomepage.sass";
import HappyBird from "../assets/images/HappyBirdy.png";
import BearImage from "../assets/images/bear-main-image.png";
import { getLangFromUrl, useTranslations } from "../i18n/utils.ts";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="intro-container">
  <img class="bird-image" src={HappyBird.src} alt="bird" />
  <div class="headline-box">
    <p class="sub-title">{t("home.subTitle")}</p>
    <h1>{t("home.title")} ❁´◡`❁ 🌸</h1>
    <button
      onclick="window.location.href='/no/abonner/'"
      class="call-for-action">{t("home.callToActionButton")}</button
    >
  </div>
</section>
