---
import "../styles/components/blogCard.sass";

interface Props {
  title: string;
  imageUrl: string;
  index: number;
  paragraph: string;
}

const { imageUrl, title } = Astro.props as Props;
const newImageUrl = `https://julians-godnatta-historier.netlify.app/.netlify/images?url=/images/${imageUrl}`;
const profileImageFullPath = `https://julians-godnatta-historier.netlify.app/.netlify/images?url=/images-authors/${page.data.profilePicture}`;
---

<div class="card-container">
  <div class="background-image" style=`background-image: url(${newImageUrl})`>
  </div>
  <div class="text-container">
    <h2 set:html={title} />
    <p>
      Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eum asperiores
    </p>
    <div class="author-container">
      <figure class="profile-image-container">
        <div
          class="profile-image"
          style={{ backgroundImage: `url(${profileImageFullPath})` }}
        >
        </div>
      </figure>
      <span class="link-author"><a href="">julian</a></span>
    </div>
    <button>READ MORE</button>
  </div>
</div>
