---
import "../styles/style.sass";
import "../styles/layout/base-layout.sass";
import { getLangFromUrl } from "../i18n/utils";
import MainHead from "../components/main-head.astro";
import LanguagePicker from "../components/languagePicker.astro";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";

const {
  title = "God Natta historier",
  description = "Page Description",
  isLight = false
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
console.log(lang, "this is lang inside main layout");
---

<!doctype html>
<html lang={lang}>
  <MainHead {title} {description} />

  <body class:list={[{ "is-light": isLight }]}>
    <div class="page">
      <Navbar />
      <main class="main-content">
        <slot>Content goes here</slot>
      </main>
      <footer class="footer-container">
        <Footer />
      </footer>
    </div>
  </body>
</html>

<style lang="sass"></style>
